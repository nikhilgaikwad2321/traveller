<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp on Traveller</h1>
    <div class="col-8 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 mt-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required/>
                <div class="valid-feedback">Valid Username</div>
                <div class="invalid-feedback">Invalid Username</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="username" type="email" class="form-control" required/>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="username" type="password" class="form-control" required/>
                
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>